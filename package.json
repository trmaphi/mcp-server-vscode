{
  "name": "mcp-server-vscode",
  "displayName": "MCP Server for VS Code",
  "description": "VS Code extension that provides an MCP server for AI assistants to interact with your development environment",
  "version": "0.1.0",
  "publisher": "trmaphi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trmaphi/mcp-server-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/trmaphi/mcp-server-vscode/issues"
  },
  "homepage": "https://github.com/trmaphi/mcp-server-vscode#readme",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "vscode",
    "language-server",
    "debugging",
    "ai-assistant",
    "claude",
    "claude-desktop",
    "claude-code",
    "anthropic"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-mcp.startServer",
        "title": "Start MCP Server"
      },
      {
        "command": "vscode-mcp.stopServer",
        "title": "Stop MCP Server"
      },
      {
        "command": "vscode-mcp.toggleServer",
        "title": "Toggle MCP Server"
      }
    ],
    "configuration": {
      "title": "VS Code MCP Server",
      "properties": {
        "vscode-mcp.port": {
          "type": "number",
          "default": 8991,
          "description": "Port for the MCP server"
        }
      }
    }
  },
  "bin": {
    "mcp-server-vscode": "./out/mcp/standalone-server.js"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rm -rf out",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "prepare": "npm run compile",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "start:mcp": "node ./out/mcp/standalone-server.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^22.10.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^8.57.1",
    "glob": "^11.0.3",
    "mocha": "^11.7.1",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.2"
  }
}
